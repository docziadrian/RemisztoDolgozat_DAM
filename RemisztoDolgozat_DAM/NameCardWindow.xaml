<Window x:Class="RemisztoDolgozat_DAM.NameCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemisztoDolgozat_DAM"
        mc:Ignorable="d"
        Title="Névjegykártya"
        WindowStartupLocation="CenterScreen"
        Height="200"
        Background="LightGreen"
        Width="300">
    <StackPanel>
        <TextBlock FontSize="30"
                   x:Name="cardName" FontFamily="Segoe Script" Margin="10" />
        
        <TextBlock Background="Black" Foreground="White" FontSize="14" Margin="5"
                    x:Name="cardBirthDate" />

        <TextBlock  FontSize="14" FontStyle="Italic" Margin="5"
                    x:Name="cardPhoneNumber" />

        <TextBlock  FontSize="14" TextAlignment="Right" Margin="5" FontWeight="ExtraBold"
                    x:Name="cardEmail" />

    </StackPanel>
</Window>
